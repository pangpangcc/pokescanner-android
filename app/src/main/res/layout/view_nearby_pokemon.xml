<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_nearby_pokemon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin"
    >

    <ImageView
        android:id="@+id/iv_pokemon_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        />

    <TextView
        android:id="@+id/tv_pokemon_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/tv_pokemon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_pokemon_image"
        android:layout_toLeftOf="@id/tv_pokemon_time"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tv_pokemon_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pokemon_name"
        android:layout_toRightOf="@id/iv_pokemon_image"
        android:layout_toLeftOf="@id/tv_pokemon_time"
        android:text="Grass/Poison"
        android:textSize="12sp"
        />

</RelativeLayout>